<% if current_user.desire?(item) %>
  <%= form_with url:ownership_path(item.id), method: :delete, local: true do |f| %>
    <%= hidden_field_tag :type, 'Desire' %>
    <%= submit_tag 'まだいらない', class: 'btn btn-danger' %>
  <% end %>
<% else %> 
  <%= form_with url:ownerships_path,local: true do |f| %>
    <%= hidden_field_tag :item_code, item.code %>
    <%= hidden_field_tag :type, 'Desire' %>
    <%= submit_tag '後で欲しい', class: 'btn btn-primary' %>
  <% end %>
<% end %>