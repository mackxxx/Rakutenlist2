<% if items %>
  <div class="row">
    <% items.each do |item| %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="card">
            <img src="<%= item.image_url %>" alt="">
          </div>
          <div class="card-body">
            <p class="item-title"><%= item.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>