<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_with scope: :item, url:items_path, method: :get, class: 'form-inline', local: true do |f| %>
        <div class="form-group">
          <%= text_field_tag :keyword, @keyword, minlength:2, class: 'form-control input-lg', placeholder: "キーワードを2文字以上入力", size: 60 %>
        </div>
        <%= submit_tag '商品を検索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'items', items: @items %>