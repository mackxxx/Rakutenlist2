<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_with scope: :item, url:new_item_path, method: :get, local: true, class: 'form-inline' do %>
      <div class="form-group">
        <%= text_field_tag :keyword, @keyword, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 70 %>
      </div>
      <%= submit_tag '商品を検索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'items', items: @items %>