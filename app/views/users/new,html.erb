<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="panel panel-diverse">
      <div class="panel-heading">新規登録</div>
       <div class="panel-body">
        <%= form_for(@user) do |f| %>
         <%= render 'shared/error_messages' %>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon"><i class="fas fa-user"></i></div>
              <%= f.text_field :name, class: 'form-control', placeholder: "お名前" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon"><i class="far fa-envelope"></i></div>
              <%= f.text_field :email, class: 'form-control', placeholder: "メールアドレス" %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon"><i class="fas fa-at"></i></div>
              <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon"><i class="fas fa-redo-alt"></i></div>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード（確認）' %>
            </div>
          </div>

          <div class="d-flex justify-content-center">
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
