<article class="card-body mx-auto" style="max-width: 400px;">
  <h4 class="card-title mt-3 text-center">登録変更</h4>
  <%= form_with model: @user, local: true do |f| %>
    <%= render 'shared/error_messages' %>
    <form>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-user"></i> </span>
        </div>
        <%= f.text_field :name, class: 'form-control', placeholder: "お名前" %>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        <%= f.text_field :email, class: 'form-control', placeholder: "メールアドレス" %>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード(確認)" %>
      </div>
      <div class="form-group">
        <%= f.submit '登録変更', class: 'btn btn-success' %>
      </div>
    <form>
　<% end %>
</article>