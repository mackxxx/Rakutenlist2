<article class="card-body mx-auto" style="max-width: 400px;">
  <h4 class="card-title mt-3 text-center">新規登録</h4>
  <%= form_with model: @user do |f| %>
    <%= render 'shared/error_messages' %>
    <p>
      <a href="" class="btn btn-block btn-twitter"> <i class="fab fa-twitter"></i> Twitterからログインする</a>
    </p>
	  <p class="divider-text">
      <span class="bg-light">OR</span>
    </p>
    <form>
    <div class="form-group input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
      </div>
    <%= f.text_field :name, class: 'form-control', placeholder: "お名前" %>
    </div> 
    <div class="form-group input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
      </div>
    <%= f.text_field :email, class: 'form-control', placeholder: "メールアドレス" %>
    </div> 
    <div class="form-group input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
      </div>
    <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
    </div> 
    <div class="form-group input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
      </div>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード(確認)" %>
    </div>                         
    <div class="form-group">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>   
    <p class="text-center">アカウントをお持ちですか? <a href="">ログイン</a> </p>                                                                 
    </form>
  <% end %>
</article>



