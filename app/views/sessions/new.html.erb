<article class="card-body mx-auto" style="max-width: 400px;">
  <h4 class="card-title mt-3 text-center">ログイン</h4>
  <%= form_with scope: :session, url:login_path, local: true do |f| %>
    <form>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        <%= f.text_field :email, class: 'form-control', placeholder: "メールアドレス" %>
      </div>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
      </div>
      <%= f.submit 'ログイン', class: 'btn btn-success' %>
      <p>新規登録がお済みでない場合はこちら ⇒ <%= link_to "新規登録", signup_path %></p>
    </form>
  <% end %>
</article>